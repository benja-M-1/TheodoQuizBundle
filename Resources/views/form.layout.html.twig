{% extends 'form_div_layout.html.twig' %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        <ul>
        {% for child in form %}
            <li>
            {{ form_widget(child) }}
            {% if "\n" in child.vars.label %}
                <br />
                {{ child.vars.label|raw }}
            {% else %}
                {{ form_label(child) }}
            {% endif %}
            </li>
        {% endfor %}
        </ul>
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}
